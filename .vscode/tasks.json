{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run current test",
            "command": "dotnet",
            "type": "shell",
            "windows": {
                "options": {
                    "cwd": "${fileDirname}"
                }
            },
            "args": [
                "run"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "run current live",
            "command": "dotnet",
            "type": "shell",
            "windows": {
                "options": {
                    "cwd": "${fileDirname}"
                }
            },
            "args": [
                "run",
                "-- live"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}
